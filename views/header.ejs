<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/style.css">
    <title>Sneaker Calendar</title>
  </head>
  <body>
    <div class="hdr">
      <div class="top">
        <div class="logo">
          <img src="/asset/logo.png">
        </div>
        <div class="searchbar">
          <img src="/asset/search.png">
            <input type="hidden" name="e" value= "" >

          <input id = "input-s" type="text" name="recherche" placeholder="Search for a sneaker ..." value= "" >
          <div id = "container" class="searchresult">
            <div id="searchresult" class ="hu">
                <% var w = 0; %>
                <% if ( typeof shoesSearch !== 'undefined') { %>
                <% w = shoesSearch.length; %>
                <% console.log("la"); %>
                <% } %>
                <% for( let i = 0; i < w; i ++) { %>
                  <form class="btnshoe hu" action="/<%= shoesSearch[i].id %>" method="get">
                    <div class="search hu">
                    <button class= "search-tab hu" type="button" name="button">
                      <img class ="hu" src = "<%= shoesSearch[i].thumbnail %>">
                      <p class = "hu"><%= shoesSearch[i].shoeName; %> </p>
                      <% let retailP = shoesSearch[i].retailPrice; %>
                      <% if (isNaN(retailP)) { %>
                        <% retailP = "no Price"; %>
                      <% } %>
                      <p><%= retailP; %></p>
                    </button>
                    </div>
                  </form>
              <% } %>
            </div>
          </div>
        </div>
        <div class="connect-btn">
          <button class= "connec log" type="button" name="button">Loggin</button>
          <button class= "connec sign" type="button" name="button">Sign in</button>
        </div>
      </div>
      <div class="bottom">
        <a href="/sneaker"> Products </a>
        <a href="#calendar"> Next Release</a>
        <a href="#Opportunities"> Best Opportunities</a>
      </div>
    </div>
